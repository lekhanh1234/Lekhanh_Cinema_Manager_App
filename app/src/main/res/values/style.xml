<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MovieSynopsisStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item> <!-- Sử dụng sp cho kích thước chữ -->
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="CategoryButton">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">13sp</item> <!-- Sử dụng sp cho kích thước chữ -->
        <item name="android:background">@color/blue_bld</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>
</resources>